<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- App Theme -->
    <style name="MainTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowBackground">@color/window_background_color</item>
        <item name="android:actionBarStyle">@style/ActionBar</item>
        <item name="android:buttonStyle">@style/Button</item>
    </style>

    <!-- ActionBar styles -->
    <style name="ActionBar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@color/blue_light</item>
        <item name="android:titleTextStyle">@style/ActionBarTitleStyle</item>
    </style>

    <style name="ActionBarTitleStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/action_bar_text_color</item>
    </style>

    <!-- Button Styles -->
    <style name="Button" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/button</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:layout_marginLeft">@dimen/button_margin</item>
        <item name="android:layout_marginRight">@dimen/button_margin</item>
        <item name="android:layout_marginBottom">@dimen/button_margin</item>
    </style>

    <!-- AppLogo Style -->
    <style name="AppLogo">
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:shadowColor">@color/app_logo_shadow_color</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:textSize">@dimen/app_logo_text_size</item>
    </style>

    <!-- Quote Style -->
    <style name="Quote">
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/quote_color</item>
        <item name="android:textSize">@dimen/quote_text_size</item>
    </style>

    <!-- ListHeader Style -->
    <style name="ListHeader">
        <item name="android:layout_marginLeft">@dimen/scrollable_view_margin</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/scrollable_view_padding_middle</item>
        <item name="android:paddingTop">@dimen/scrollable_view_padding_middle</item>
        <item name="android:textColor">@color/chooser_text_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/list_header_text_size</item>
    </style>

    <style name="ListHeaderUnderline">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1.7dp</item>
        <item name="android:layout_marginLeft">@dimen/scrollable_view_margin</item>
        <item name="android:layout_marginRight">@dimen/scrollable_view_margin</item>
        <item name="android:background">@color/chooser_divider_color</item>
    </style>

    <!-- Scrollable -->
    <style name="List">
        <item name="android:layout_marginBottom">@dimen/scrollable_view_margin</item>
        <item name="android:layout_marginLeft">@dimen/scrollable_view_margin</item>
        <item name="android:layout_marginRight">@dimen/scrollable_view_margin_small</item>
        <item name="android:scrollbarStyle">outsideInset</item>
    </style>

    <style name="Scrollable">
        <item name="android:paddingBottom">@dimen/scrollable_view_padding</item>
        <item name="android:paddingLeft">@dimen/scrollable_view_padding</item>
        <item name="android:paddingRight">@dimen/scrollable_view_padding_small</item>
        <item name="android:paddingTop">@dimen/scrollable_view_padding</item>
        <item name="android:scrollbarStyle">outsideInset</item>
    </style>

    <style name="List.WithoutHeader">
        <item name="android:layout_marginTop">@dimen/scrollable_view_margin</item>
    </style>

    <!-- Scrollable Grid -->
    <style name="Scrollable.Grid">
        <item name="android:columnWidth">@dimen/grid_question_column_width</item>
        <item name="android:verticalSpacing">@dimen/grid_question_spacing</item>
        <item name="android:horizontalSpacing">@dimen/grid_question_spacing</item>
        <item name="android:numColumns">auto_fit</item>
        <item name="android:stretchMode">columnWidth</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="GridQuestion">
        <item name="android:layout_width">@dimen/grid_question_column_width</item>
        <item name="android:layout_height">@dimen/grid_question_column_width</item>
        <item name="android:background">@drawable/bg_white_blue</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text_color_gray_white</item>
        <item name="android:textSize">@dimen/grid_question_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- TextStyles -->
    <style name="TextMarqueeLine">
        <item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:singleLine">true</item>
    </style>


    <!-- Lesson -->
    <style name="LessonName" parent="TextMarqueeLine">
        <item name="android:textColor">@color/list_item_text_color</item>
        <item name="android:textSize">@dimen/lesson_name_text_size</item>
    </style>

    <style name="LessonTestsCounter" parent="TextMarqueeLine">
        <item name="android:textColor">@color/sub_item_text_color</item>
        <item name="android:textSize">@dimen/lesson_tests_counter_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Test -->
    <style name="TestName" parent="TextMarqueeLine">
        <item name="android:textColor">@color/list_item_text_color</item>
        <item name="android:textSize">@dimen/test_name_text_size</item>
    </style>

    <style name="TestProperties" parent="TextMarqueeLine">
        <item name="android:textColor">@color/sub_item_text_color</item>
        <item name="android:textSize">@dimen/test_properties_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Record -->
    <style name="RecordBall">
        <item name="android:textColor">@color/record_ball_color</item>
        <item name="android:textSize">@dimen/record_ball_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">@dimen/question_padding</item>
        <item name="android:typeface">normal</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <!-- Empty List Notice -->
    <style name="EmptyListNotice">
        <item name="android:textColor">@color/record_ball_color</item>
        <item name="android:textSize">24sp</item>
        <item name="android:paddingLeft">@dimen/scrollable_view_margin</item>
    </style>

    <!-- Question -->
    <style name="QuestionHeader">
        <item name="android:background">@color/white</item>
        <item name="android:paddingLeft">@dimen/question_padding</item>
        <item name="android:paddingRight">@dimen/question_padding</item>
        <item name="android:paddingTop">@dimen/question_padding_small</item>
    </style>

    <style name="QuestionText" parent="QuestionHeader">
        <item name="android:paddingBottom">@dimen/question_padding</item>
        <item name="android:layout_marginBottom">@dimen/question_margin</item>
        <item name="android:textColor">@color/question_text_color</item>
        <item name="android:textSize">@dimen/question_text_size</item>
    </style>

    <style name="UnansweredQuestion" parent="QuestionText">
        <item name="android:background">@color/orange</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">@dimen/unanswered_question_padding</item>
    </style>

    <style name="QuestionStatement">
        <item name="android:progressDrawable">@drawable/seek_bar_progress</item>
        <item name="android:thumb">@drawable/seek_bar_thumb</item>
        <item name="android:layout_margin">@dimen/question_margin</item>
    </style>

    <!-- Test Result -->
    <style name="TestResult" parent="QuestionHeader">
        <item name="android:layout_marginLeft">@dimen/scrollable_view_padding</item>
        <item name="android:layout_marginRight">@dimen/scrollable_view_padding</item>
        <item name="android:layout_marginTop">@dimen/scrollable_view_padding</item>
        <item name="android:padding">@dimen/question_margin</item>
    </style>

    <style name="ResultLessonHeader">
        <item name="android:textSize">@dimen/result_lesson_header_text_size</item>
        <item name="android:textColor">@color/quote_color</item>
    </style>

    <style name="ResultBallTimeHeader">
        <item name="android:textSize">@dimen/result_time_ball_header_text_size</item>
        <item name="android:textColor">@color/sub_item_text_color</item>
    </style>

    <style name="ResultBallTime">
        <item name="android:textSize">@dimen/result_time_ball_text_size</item>
        <item name="android:textColor">@color/quote_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ResultRowSeparator">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginLeft">@dimen/space_medium</item>
        <item name="android:layout_marginRight">@dimen/space_medium</item>
        <item name="android:layout_width">1dp</item>
        <item name="android:alpha">0.1</item>
        <item name="android:background">@android:color/black</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!-- Answer -->
    <style name="AnswerText">
        <item name="android:textColor">@color/text_color_gray_white</item>
        <item name="android:textSize">@dimen/question_text_size</item>
    </style>

    <style name="OnlyCorrect" parent="AnswerText">
        <item name="android:inputType">number</item>
        <item name="android:maxLength">3</item>
        <item name="android:minEms">3</item>
    </style>

    <style name="AnswerShort">
        <item name="android:layout_marginLeft">@dimen/answer_margin</item>
        <item name="android:textSize">@dimen/answer_short_text_size</item>
    </style>

    <style name="AnswerShort.Correct">
        <item name="android:textColor">@color/green</item>
    </style>

    <style name="Answer">
        <item name="android:background">@drawable/bg_white_blue</item>
        <item name="android:padding">@dimen/answer_margin</item>
    </style>

    <!-- Timer -->
    <style name="Timer">
        <item name="android:padding">@dimen/timer_padding</item>
        <item name="android:alpha">0.8</item>
        <item name="android:background">@color/blue_light</item>
        <item name="android:textColor">@color/text_color_white_gray</item>
        <item name="android:textSize">@dimen/timer_text_size</item>
    </style>

</resources>