<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vojkovladimir.zno"
    android:versionCode="1"
    android:versionName="1.0">

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="20" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="ZNOApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/MainTheme">
        <activity
            android:name="com.vojkovladimir.zno.SplashActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/SplashActivityTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.vojkovladimir.zno.MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".TestingActivity"
            android:label="@string/testing_activity_label">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.vojkovladimir.zno.MainActivity" />
        </activity>
        <activity
            android:name=".LessonTestsActivity"
            android:configChanges="keyboardHidden|orientation|screenSize">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.vojkovladimir.zno.TestingActivity" />
        </activity>
        <activity
            android:name=".TestActivity"
            android:configChanges="keyboardHidden|orientation|screenSize">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.vojkovladimir.zno.LessonTestsActivity" />
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" />

                <action android:name="com.vojkovladimir.zno.VIEW_TEST" />
                <action android:name="com.vojkovladimir.zno.PASS_TEST" />
                <action android:name="com.vojkovladimir.zno.CONTINUE_PASSAGE_TEST" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ViewImageActivity"
            android:theme="@android:style/Theme.Translucent.NoTitleBar">
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" />

                <action android:name="android.intent.action.VIEW" />

                <data android:scheme="open.image" />
            </intent-filter>
        </activity>

        <service
            android:name=".service.ApiService"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" />

                <action android:name="api.download.test" />
            </intent-filter>
        </service>
    </application>

</manifest>