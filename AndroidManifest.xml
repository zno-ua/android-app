<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vojkovladimir.zno"
    android:versionCode="1"
    android:versionName="1.0">

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="ZNOApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/MainTheme">

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LessonsActivity"
            android:label="@string/testing_activity_label">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.vojkovladimir.zno.MainActivity" />
        </activity>
        <activity
            android:name=".TestsActivity"
            android:configChanges="keyboardHidden|orientation|screenSize">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.vojkovladimir.zno.LessonsActivity" />
        </activity>

        <activity
            android:name=".RecordsActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.vojkovladimir.zno.MainActivity" />
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" />

                <action android:name="com.vojkovladimir.zno.VIEW_PASSED_TESTS" />
                <action android:name="com.vojkovladimir.zno.VIEW_BEST_SCORES" />
            </intent-filter>
        </activity>

        <activity
            android:name=".TestActivity"
            android:configChanges="keyboardHidden|orientation|screenSize">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.vojkovladimir.zno.TestsActivity" />
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" />

                <action android:name="com.vojkovladimir.zno.VIEW_TEST" />
                <action android:name="com.vojkovladimir.zno.PASS_TEST" />
                <action android:name="com.vojkovladimir.zno.CONTINUE_PASSAGE_TEST" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ViewImageActivity"
            android:noHistory="true"
            android:theme="@android:style/Theme.Translucent.NoTitleBar">
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" />

                <action android:name="android.intent.action.VIEW" />

                <data android:scheme="open.image" />
            </intent-filter>
        </activity>

        <service
            android:name=".service.ApiService"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" />

                <action android:name="api.CHECK_FOR_UPDATES" />
            </intent-filter>
        </service>

        <receiver android:name="com.vojkovladimir.zno.NetWatcher">
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
        </receiver>
    </application>

</manifest>