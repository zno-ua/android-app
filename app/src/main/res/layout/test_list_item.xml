<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_item_background"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/two_line_item_tile_height">

        <FrameLayout
            android:id="@+id/action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">

            <Space
                android:layout_width="@dimen/key_line_1"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/action_icon"
                android:layout_width="@dimen/action_icon_width"
                android:layout_height="@dimen/action_icon_width"
                android:layout_margin="@dimen/key_line_1"
                android:alpha="0.54"
                android:tint="@color/black"
                android:visibility="gone" />
        </FrameLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/key_line_1"
            android:layout_toLeftOf="@id/action">

            <TextView
                android:id="@+id/primary_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="@color/primary_text_default_material_light"
                android:textSize="@dimen/abc_text_size_medium_material" />

            <TextView
                android:id="@+id/secondary_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/primary_text"
                android:layout_below="@id/primary_text"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/secondary_text_default_material_light"
                android:textSize="@dimen/abc_text_size_small_material" />
        </RelativeLayout>

        <include
            android:id="@+id/divider"
            layout="@layout/question_item_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true" />

    </RelativeLayout>

    <View
        android:id="@+id/bottom_shadow"
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="@drawable/shadow_bottom" />
</LinearLayout>