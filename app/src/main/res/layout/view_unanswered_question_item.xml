<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardView="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/key_line_8dp"
    android:layout_marginRight="@dimen/key_line_8dp"
    cardView:cardBackgroundColor="@color/white"
    cardView:cardUseCompatPadding="false">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/key_line_1"
        android:text="@string/unanswered_question_prompt"
        android:textColor="@color/red_500"
        android:textSize="14sp"
        android:textStyle="bold" />

</android.support.v7.widget.CardView>