<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="88dp"
    android:background="@drawable/list_item_background">

    <RelativeLayout
        android:id="@+id/action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/key_line_1"
        android:layout_marginRight="@dimen/key_line_1"
        tools:ignore="RtlHardcoded">


        <TextView
            android:id="@+id/point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:ellipsize="end"
            android:maxLines="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="18sp"
            android:textStyle="italic"
            tools:text="200.0" />

        <ImageView
            android:id="@+id/smile"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignBottom="@id/point"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@id/point"
            android:src="@drawable/ic_poll_black_24dp"
            tools:ignore="ContentDescription" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/key_line_1"
        android:layout_toLeftOf="@id/action"
        tools:ignore="RtlHardcoded">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@color/primary_text_color"
            android:textSize="18sp"
            tools:text="2014 year" />

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/title"
            android:layout_below="@id/title"
            android:ellipsize="end"
            android:lines="2"
            android:maxLines="2"
            android:textColor="@color/secondary_text_color"
            android:textSize="14sp"
            tools:text="Official test \nPassed at February 22th" />
    </RelativeLayout>

</RelativeLayout>