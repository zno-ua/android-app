<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusableInTouchMode="true"
    card_view:cardBackgroundColor="@color/white"
    card_view:cardCornerRadius="@dimen/card_view_corner_radius"
    card_view:cardElevation="4dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/card_padding"
        android:paddingTop="@dimen/card_padding">

        <include
            android:id="@+id/header"
            layout="@layout/question_item_header" />

        <include layout="@layout/question_item_text" />

        <Button
            android:id="@+id/read_text_button"
            style="@style/AppCompat.Button.Flat.Common"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="@string/read_text"
            android:textColor="?attr/colorAccent" />

        <include layout="@layout/question_item_divider" />

        <LinearLayout
            android:id="@+id/unanswered_question_warning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/card_padding"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/unanswered_question_warning"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="@color/red_700"
                android:textSize="@dimen/abc_text_size_small_material"
                android:textStyle="bold" />

            <include layout="@layout/question_item_divider" />

        </LinearLayout>

        <net.zno_ua.app.ui.widget.RecyclerLinearLayout
            android:id="@+id/answers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </LinearLayout>

</android.support.v7.widget.CardView>