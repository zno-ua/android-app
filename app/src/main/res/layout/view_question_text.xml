<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/key_line_8dp"
    android:layout_marginRight="@dimen/key_line_8dp"
    app:cardBackgroundColor="@color/white"
    app:cardUseCompatPadding="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ViewStub
            android:id="@+id/text_view_stub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/key_line_1"
            android:layout="@layout/view_text" />

        <ViewStub
            android:id="@+id/web_view_stub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/key_line_1"
            android:layout="@layout/view_text_tagged" />

        <ViewStub
            android:id="@+id/additional_text_view_stub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/btn_flat_padding"
            android:layout_marginLeft="@dimen/btn_flat_padding"
            android:layout_marginRight="@dimen/btn_flat_padding"
            android:layout="@layout/view_read_text_button" />
    </LinearLayout>

</android.support.v7.widget.CardView>